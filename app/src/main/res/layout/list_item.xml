<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingTop="@dimen/list_item_top_bottom_padding"
    android:paddingBottom="@dimen/list_item_top_bottom_padding">

    <LinearLayout
        android:id="@+id/item_header_included"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_big_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Caller Pic -->
        <include
            layout="@layout/list_item_header"
            android:layout_width="@dimen/header_width"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

    <!-- Name Text -->
    <TextView
        android:id="@+id/item_big_text"
        style="@style/ListItemText.Big"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toTopOf="@id/item_small_text"
        app:layout_constraintEnd_toStartOf="@+id/item_image_layout"
        app:layout_constraintStart_toEndOf="@+id/item_header_included"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <!-- Phone Number Text -->
    <TextView
        android:id="@+id/item_small_text"
        style="@style/ListItemText.Small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/item_big_text"
        app:layout_constraintStart_toStartOf="@+id/item_big_text"
        app:layout_constraintTop_toBottomOf="@+id/item_big_text"
        app:layout_constraintVertical_chainStyle="packed" />

    <FrameLayout
        android:id="@+id/item_image_layout"
        style="@style/ListItemImage.Layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_big_text"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/item_photo_placeholder"
            style="@style/ListItemImage.Placeholder"
            tools:visibility="visible" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_photo"
            style="@style/ListItemImage.Image" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>