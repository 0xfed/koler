<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".ui.activity.MainActivity">

    <!-- App Bar -->
    <include
        android:id="@+id/appbar"
        layout="@layout/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Contacts List View Fragment-->
    <fragment
        android:id="@+id/main_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:defaultNavHost="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:navGraph="@navigation/main"
        tools:layout="@layout/fragment_contacts" />

    <!-- TODO add style for bottom FloatingActionButton -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/search_button"
        style="@style/ActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        app:layout_anchor="@+id/main_dialer_fragment"
        app:layout_anchorGravity="left|bottom"
        app:srcCompat="@drawable/ic_search_black_24dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/dialer_button"
        style="@style/ActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        app:layout_anchor="@+id/main_dialer_fragment"
        app:layout_anchorGravity="right|bottom"
        app:srcCompat="@drawable/ic_dialpad_black_24dp" />

    <!-- Dialer Fragment-->
    <fragment
        android:id="@+id/main_dialer_fragment"
        android:name="com.chooloo.www.callmanager.ui.fragment.DialFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="main_dialer_tag"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        app:layout_anchorGravity="bottom"
        app:layout_behavior="@string/bottom_sheet_behavior"
        tools:layout="@layout/fragment_dial" />
    <!-- app:behavior_peekHeight="@dimen/phone_number_input_with_margins_height" -->
</androidx.coordinatorlayout.widget.CoordinatorLayout>