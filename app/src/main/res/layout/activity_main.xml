<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".activity.MainActivity">

    <!-- App Bar -->
    <include
        android:id="@+id/appbar"
        layout="@layout/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        android:id="@+id/sliding_up_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:focusable="true"
        android:nestedScrollingEnabled="true"
        android:gravity="bottom"
        app:umanoFadeColor="#00000000"
        app:umanoOverlay="true"
        app:umanoPanelHeight="@dimen/phone_number_input_height"
        app:umanoShadowHeight="0dp">

        <!-- Contacts List View Fragment-->
        <fragment
            android:id="@+id/main_fragment"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:defaultNavHost="true"
            app:navGraph="@navigation/main"
            tools:layout="@layout/fragment_contacts" />

        <!-- Dialer Fragment-->
        <fragment
            android:id="@+id/main_dialer_fragment"
            android:name="com.chooloo.www.callmanager.fragment.DialFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="main_dialer_tag"
            tools:layout="@layout/fragment_dial" />

    </com.sothree.slidinguppanel.SlidingUpPanelLayout>

    <!--TODO remove these ugly buttons when we can-->

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Excel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sliding_up_panel" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>