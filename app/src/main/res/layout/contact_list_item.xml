<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5.0sp"
    android:layout_marginEnd="5.0sp"
    android:background="@drawable/list_item_background"
    android:orientation="horizontal"
    android:padding="20dp"
    android:paddingStart="20sp">

    <TextView
        android:id="@+id/contact_dial_list_name_text"
        style="@style/ListItemText.Big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10sp"
        android:clickable="true" />


    <TextView
        android:id="@+id/contact_dial_list_number_text"
        style="@style/ListItemText.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true" />

</LinearLayout>