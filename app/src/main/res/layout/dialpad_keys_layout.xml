<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialpad_keys_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary"
    android:layoutDirection="ltr"
    android:padding="10dp"
    android:stretchColumns="*">

    <TableRow>

        <com.chooloo.www.callmanager.ui.widgets.DialpadKey
            android:id="@+id/key_1"
            app:digit="1" />

        <com.chooloo.www.callmanager.ui.widgets.DialpadKey
            android:id="@+id/key_2"
            app:digit="2" />

        <com.chooloo.www.callmanager.ui.widgets.DialpadKey
            android:id="@+id/key_3"
            app:digit="3" />

    </TableRow>

    <TableRow>

        <com.chooloo.www.callmanager.ui.widgets.DialpadKey
            android:id="@+id/key_4"
            app:digit="4" />

        <com.chooloo.www.callmanager.ui.widgets.DialpadKey
            android:id="@+id/key_5"
            app:digit="5" />

        <com.chooloo.www.callmanager.ui.widgets.DialpadKey
            android:id="@+id/key_6"
            app:digit="6" />

    </TableRow>

    <TableRow>

        <com.chooloo.www.callmanager.ui.widgets.DialpadKey
            android:id="@+id/key_7"
            app:digit="7" />

        <com.chooloo.www.callmanager.ui.widgets.DialpadKey
            android:id="@+id/key_8"
            app:digit="8" />

        <com.chooloo.www.callmanager.ui.widgets.DialpadKey
            android:id="@+id/key_9"
            app:digit="9" />

    </TableRow>

    <TableRow>

        <com.chooloo.www.callmanager.ui.widgets.DialpadKey
            android:id="@+id/key_star"
            app:digit="*" />

        <com.chooloo.www.callmanager.ui.widgets.DialpadKey
            android:id="@+id/key_0"
            app:digit="0" />

        <com.chooloo.www.callmanager.ui.widgets.DialpadKey
            android:id="@+id/key_hex"
            app:digit="#" />

    </TableRow>

</TableLayout>