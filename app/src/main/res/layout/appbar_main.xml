<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/appbar_main"
    style="@style/Koler.Appbar.Layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_scrollFlags="scroll|enterAlways">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tab_text_contacts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="?selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/contacts"
                android:textAppearance="@style/Koler.Text.Headline3" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tab_text_recents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/tab_text_contacts"
                android:background="?selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/recents"
                android:textAppearance="@style/Koler.Text.Headline3"
                tools:enabled="false"
                tools:ignore="RelativeOverlap" />

            <ImageView
                android:id="@+id/main_menu_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_more_vert_black_24dp" />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <!-- search fragment -->
    <FrameLayout
        android:id="@+id/main_search_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"

        tools:layout="@layout/fragment_search_bar" />

</com.google.android.material.appbar.AppBarLayout>