<?xml version="1.0" encoding="utf-8"?>

<!-- The Dialpad View (the whole view, including the edit text) -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bubble_background">

    <com.chooloo.www.callmanager.ui.widgets.DialpadEditText
        android:id="@+id/dialpad_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:background="@android:color/transparent"
        android:cursorVisible="true"
        android:focusableInTouchMode="true"
        android:freezesText="true"
        android:gravity="center"
        android:inputType="phone"
        android:maxLines="1"
        android:padding="15dp"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
        android:textColor="@color/color_accent"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/dialpad_keys_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottom_dialog_fragment_swipe_indicator"
        tools:text="01231293" />

    <TableLayout
        android:id="@+id/dialpad_keys_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layoutDirection="ltr"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:stretchColumns="*"
        app:layout_constraintBottom_toTopOf="@id/dialpad_button_call"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow>

            <com.chooloo.www.callmanager.ui.widgets.DialpadKey
                android:id="@+id/key_1"
                app:digit="1" />

            <com.chooloo.www.callmanager.ui.widgets.DialpadKey
                android:id="@+id/key_2"
                app:digit="2" />

            <com.chooloo.www.callmanager.ui.widgets.DialpadKey
                android:id="@+id/key_3"
                app:digit="3" />
        </TableRow>

        <TableRow>

            <com.chooloo.www.callmanager.ui.widgets.DialpadKey
                android:id="@+id/key_4"
                app:digit="4" />

            <com.chooloo.www.callmanager.ui.widgets.DialpadKey
                android:id="@+id/key_5"
                app:digit="5" />

            <com.chooloo.www.callmanager.ui.widgets.DialpadKey
                android:id="@+id/key_6"
                app:digit="6" />
        </TableRow>

        <TableRow>

            <com.chooloo.www.callmanager.ui.widgets.DialpadKey
                android:id="@+id/key_7"
                app:digit="7" />

            <com.chooloo.www.callmanager.ui.widgets.DialpadKey
                android:id="@+id/key_8"
                app:digit="8" />

            <com.chooloo.www.callmanager.ui.widgets.DialpadKey
                android:id="@+id/key_9"
                app:digit="9" />
        </TableRow>

        <TableRow>

            <com.chooloo.www.callmanager.ui.widgets.DialpadKey
                android:id="@+id/key_star"
                app:digit="*" />

            <com.chooloo.www.callmanager.ui.widgets.DialpadKey
                android:id="@+id/key_0"
                app:digit="0" />

            <com.chooloo.www.callmanager.ui.widgets.DialpadKey
                android:id="@+id/key_hex"
                app:digit="#" />
        </TableRow>
    </TableLayout>

    <ImageView
        android:id="@+id/dialpad_button_call"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="30dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="fitXY"
        android:src="@drawable/ic_call_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/dialpad_button_delete"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="15dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_arrow_back_ios_24px"
        app:layout_constraintBottom_toBottomOf="@id/dialpad_button_call"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/dialpad_button_call"
        app:layout_constraintTop_toTopOf="@id/dialpad_button_call"
        app:tint="@color/grey_500" />
</androidx.constraintlayout.widget.ConstraintLayout>