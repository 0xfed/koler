<resources>

    <style name="Koler" />

    <!-- text -->
    <style name="Koler.Text">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Koler.Text.Headline1">
        <item name="android:textSize">@dimen/headline_1</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Koler.Text.Headline2">
        <item name="android:textSize">@dimen/headline_2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Koler.Text.Subtitle1">
        <item name="android:textSize">@dimen/subtitle_1</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Koler.Text.Subtitle2">
        <item name="android:textSize">@dimen/subtitle_2</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Koler.Text.Caption">
        <item name="android:textSize">@dimen/caption_1</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <!-- image view -->
    <style name="Koler.Image" />

    <style name="Koler.Image.Profile">
        <item name="civ_border_width">0dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="Koler.Image.Profile.Big">
        <item name="android:layout_width">@dimen/image_size_big</item>
        <item name="android:layout_height">@dimen/image_size_big</item>
    </style>

    <style name="Koler.Image.Profile.Small">
        <item name="android:layout_width">@dimen/image_size_small</item>
        <item name="android:layout_height">@dimen/image_size_small</item>
    </style>

    <!-- bottom dialog -->
    <style name="Koler.BottomDialog" />

    <style name="Koler.BottomDialog.Theme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Koler.BottomDialog.BottomSheetStyle</item>
    </style>

    <style name="Koler.BottomDialog.BottomSheetStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">@style/Koler.BottomDialog.ShapeAppearanceOverlay</item>
    </style>

    <style name="Koler.BottomDialog.ShapeAppearanceOverlay">
        <item name="cornerSizeTopRight">@dimen/bubble_corner_radius</item>
        <item name="cornerSizeTopLeft">@dimen/bubble_corner_radius</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <!-- list view -->
    <style name="Koler.ListView" parent="Widget.AppCompat.ListView">
        <item name="android:requiresFadingEdge">vertical</item>
        <item name="android:scrollbars">none</item>
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <!-- list item -->
    <style name="Koler.ListItem" />

    <style name="Koler.ListItem.Layout">
        <item name="android:padding">@dimen/list_item_padding</item>
        <item name="android:paddingStart">@dimen/list_item_padding_sides</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="Koler.ListItem.Header">
        <item name="android:textSize">@dimen/list_item_header_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6
        </item>
    </style>

    <style name="Koler.ListItem.Text">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="Koler.ListItem.Text.Big">
        <item name="android:textAppearance">@style/Koler.Text.Subtitle1</item>
        <item name="android:layout_marginStart">@dimen/list_item_padding</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Koler.ListItem.Text.Small">
        <item name="android:textAppearance">@style/Koler.Text.Caption</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/list_item_small_text_top_margin</item>
        <item name="android:textColor">@color/grey_500</item>
    </style>

    <!-- dialpad -->
    <style name="Koler.Dialpad" />

    <style name="Koler.Dialpad.Key" />

    <style name="Koler.Dialpad.Key.Layout">
        <item name="android:padding">8dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="Koler.Dialpad.Key.Text">
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Koler.Dialpad.Key.Text.Number">
        <item name="android:textAppearance">@style/Koler.Text.Headline2</item>
        <item name="android:fontFamily">@font/ibm_plex_sans_light</item>
    </style>

    <style name="Koler.Dialpad.Key.Text.Letters">
        <item name="android:textAppearance">@style/Koler.Text.Caption</item>
    </style>

    <!-- call -->
    <style name="Koler.Call" />

    <style name="Koler.Call.Layout">
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="Koler.Call.Button" />

    <style name="Koler.Call.Button.Action" />

    <style name="Koler.Call.Button.Action.Layout">
        <item name="android:elevation">5dp</item>
        <item name="android:clickable">true</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:padding">@dimen/call_action_padding</item>
    </style>

    <style name="Koler.Call.Button.Action.Text">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Caption</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Koler.Call.Button.Bottom">
        <item name="android:tint">@color/white</item>
        <item name="android:scaleType">center</item>
        <item name="fabCustomSize">70dp</item>
        <item name="elevation">0dp</item>
        <item name="android:elevation">0dp</item>
        <item name="borderWidth">0dp</item>
        <item name="fabSize">normal</item>
        <item name="maxImageSize">36dp</item>
    </style>

    <style name="Koler.Call.Text">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Koler.Call.Text.Status">
        <item name="android:textAppearance">@style/Koler.Text.Subtitle1</item>
    </style>

    <style name="Koler.Call.Text.Time">
        <item name="android:textAppearance">@style/Koler.Text.Caption</item>
    </style>

    <style name="Koler.Call.Text.Name">
        <item name="android:textAppearance">@style/Koler.Text.Headline2</item>
    </style>

    <!-- appbar -->
    <style name="Koler.Appbar" />

    <style name="Koler.Appbar.Layout">
        <item name="elevation">0dp</item>
        <item name="layout_scrollFlags">scroll</item>
    </style>

    <!-- search bar -->
    <style name="Koler.SearchBar" />

    <style name="Koler.SearchBar.Layout">
        <item name="android:background">@drawable/search_bar_background_selector</item>
    </style>

    <style name="Koler.SearchBar.EditText">
        <item name="android:background">@null</item>
        <item name="android:hint">@string/search_hint</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:textColorHint">@color/grey_200</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- contact fragment -->
    <style name="Koler.Contact" />

    <style name="Koler.Contact.Button" />

    <style name="Koler.Contact.Button.Action">
        <item name="android:elevation">5dp</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:padding">10dp</item>
    </style>
</resources>
