<resources>

    <!-- bottom sheet -->
    <style name="BottomSheet">
        <item name="cornerSizeTopRight">@dimen/bubble_corner_radius</item>
        <item name="cornerSizeTopLeft">@dimen/bubble_corner_radius</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <!-- list view -->
    <style name="ListView" parent="Widget.AppCompat.ListView">
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingTop">@dimen/default_spacing_padding</item>
        <item name="android:paddingBottom">@dimen/fab_and_bottom_padding</item>
    </style>

    <!-- list item -->
    <style name="ListItem" />

    <style name="ListItem.Layout">
        <item name="android:padding">@dimen/list_item_padding</item>
        <item name="android:paddingStart">@dimen/list_item_padding_sides</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="ListItem.Header">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/list_item_header_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/grey_800</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6
        </item>
    </style>

    <style name="ListItem.Text">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ListItem.Text.Big">
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle1
        </item>
        <item name="android:layout_marginStart">@dimen/list_item_padding</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">Simta Kumta</item>
    </style>

    <style name="ListItem.Text.Small">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">@dimen/list_item_small_text_top_margin</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Caption</item>
        <item name="android:text">0523839832</item>
        <item name="android:textColor">@color/grey_500</item>
    </style>

    <style name="ListItem.Image">
        <item name="android:layout_width">@dimen/list_item_image_size</item>
        <item name="android:layout_height">@dimen/list_item_image_size</item>
        <item name="android:tint">@color/grey_100</item>
        <item name="civ_border_width">0dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <!-- dialpad -->
    <style name="Dialpad" />

    <style name="Dialpad.Key" />

    <style name="Dialpad.Key.Layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="Dialpad.Key.Text">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Dialpad.Key.Text.Number">
        <item name="android:textSize">@dimen/dialpad_key_number_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Dialpad.Key.Text.Letters">
        <item name="android:textSize">@dimen/dialpad_key_letters_text_size</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!-- Popup -->
    <style name="ContactPopup" />

    <style name="ContactPopup.Button">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!-- call -->
    <style name="Call" />

    <style name="Call.Button" />

    <style name="Call.Button.Action">
        <item name="android:layout_width">@dimen/call_action_size</item>
        <item name="android:layout_height">@dimen/call_action_size</item>
        <item name="android:background">@drawable/ripple_oval</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:padding">@dimen/call_action_padding</item>
        <item name="android:tint">@color/selector_button_icon</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="Call.Button.Bottom">
        <item name="android:layout_margin">30dp</item>
        <item name="android:scaleType">center</item>
        <item name="fabCustomSize">70dp</item>
        <item name="fabSize">normal</item>
        <item name="maxImageSize">36dp</item>
    </style>

    <!-- appbar -->
    <style name="Appbar" />

    <style name="Appbar.Layout">
        <item name="android:elevation">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>
</resources>
