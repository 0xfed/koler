<resources>
    <!-- Bottom Sheet -->
    <style name="BottomSheet" parent="">
        <item name="cornerSizeTopRight">@dimen/bubble_corner_radius</item>
        <item name="cornerSizeTopLeft">@dimen/bubble_corner_radius</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <!-- List View -->
    <style name="ListView" parent="Widget.AppCompat.ListView">
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingTop">@dimen/default_spacing_padding</item>
        <item name="android:paddingBottom">@dimen/fab_and_bottom_padding</item>
    </style>

    <style name="ListItemText">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ListItemText.Big">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
        <item name="android:text">Big Text lkdj alsdkj lkjasdfh lkjasdh fjksh kjfl hskjdla</item>
    </style>

    <style name="ListItemText.Small">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Caption</item>
        <item name="android:text">small text, small text, small text, small text, small text</item>
    </style>

    <style name="ListItemImage" />

    <style name="ListItemImage.Layout">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_margin">@dimen/list_item_header_margin</item>
    </style>

    <style name="ListItemImage.Placeholder">
        <item name="android:layout_width">@dimen/list_item_image_placeholder_size</item>
        <item name="android:layout_height">@dimen/list_item_image_placeholder_size</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:tint">@color/image_placeholder_background</item>
        <item name="android:visibility">gone</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="srcCompat">@drawable/ic_account_circle_black_outlined_24dp</item>
    </style>

    <style name="ListItemImage.Image">
        <item name="android:layout_width">@dimen/list_item_image_size</item>
        <item name="android:layout_height">@dimen/list_item_image_size</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">gone</item>
        <item name="civ_border_width">0dp</item>
    </style>

    <style name="ActionButton" parent="Widget.Design.FloatingActionButton">
        <item name="android:tint">@color/white</item>
    </style>

    <!-- DialpadKey -->
    <style name="DialpadKey">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:soundEffectsEnabled">false</item>
        <item name="android:padding">8dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="DialpadKeyNumber">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/dialpad_key_number_text_size</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle1
        </item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="DialpadKeyLetters">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/dialpad_key_letters_text_size</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle2
        </item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!-- Popup -->
    <style name="ContactPopup" />

    <style name="ContactPopup.Button">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!-- Call Buttons -->
    <style name="CallButton" />

    <style name="CallButton.ActionButton">
        <item name="android:layout_width">@dimen/call_action_size</item>
        <item name="android:layout_height">@dimen/call_action_size</item>
        <item name="android:background">@drawable/ripple_oval</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:padding">@dimen/call_action_padding</item>
        <item name="android:tint">@color/selector_button_icon</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="CallButton.BottomButton">
        <item name="android:layout_margin">30dp</item>
        <item name="android:scaleType">center</item>
        <item name="fabCustomSize">70dp</item>
        <item name="fabSize">normal</item>
        <item name="maxImageSize">36dp</item>
    </style>

</resources>
