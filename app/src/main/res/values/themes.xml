<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Theme Styles -->

    <style name="KolerTheme" parent="Theme.MaterialComponents.Light.Bridge">
        <!--region attr colors-->
        <item name="colorOnSecondary">?colorSecondaryVariant</item>
        <item name="colorAccent">?colorSecondaryVariant</item>
        <item name="colorError">@color/color_error</item>
        <!--endregion-->

        <!--region android colors-->
        <item name="android:textColorSecondary">?colorPrimaryDark</item>
        <item name="android:windowBackground">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!--endregion-->

        <!--region action bar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--endregion-->

        <!--region other-->
        <item name="android:fontFamily">@font/google_sans_regular</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="bottomSheetDialogTheme">@style/Koler.BottomDialog.Theme</item>
        <!--endregion-->
    </style>

    <style name="Accent" />

    <style name="Accent.Blue">
        <item name="colorSecondary">@color/blue_light</item>
        <item name="colorSecondaryVariant">@color/blue_dark</item>
    </style>

    <style name="Accent.Orange">
        <item name="colorSecondary">@color/orange_light</item>
        <item name="colorSecondaryVariant">@color/orange_dark</item>
    </style>

    <style name="Accent.Green">
        <item name="colorSecondary">@color/green_light</item>
        <item name="colorSecondaryVariant">@color/green_dark</item>
    </style>

    <style name="Accent.Purple">
        <item name="colorSecondary">@color/purple_light</item>
        <item name="colorSecondaryVariant">@color/purple_dark</item>
    </style>

    <style name="Accent.Red">
        <item name="colorSecondary">@color/red_light</item>
        <item name="colorSecondaryVariant">@color/red_dark</item>
    </style>
</resources>
