<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Theme Styles -->

    <style name="KolerTheme" parent="Theme.MaterialComponents.Light.Bridge">
        <!-- attribute colors -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_dark</item>
        <item name="colorOnSecondary">?colorSecondaryVariant</item>
        <item name="colorAccent">?colorSecondaryVariant</item>
        <item name="colorError">@color/color_error</item>

        <item name="android:textColorSecondary">?colorPrimaryDark</item>

        <!-- views colors -->
        <item name="android:windowBackground">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>

        <!-- other -->
        <item name="android:fontFamily">@font/ibm_plex_sans_medium</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="bottomSheetDialogTheme">@style/Koler.BottomDialog.Theme</item>
    </style>

    <style name="KolerTheme.NoActionBar" parent="KolerTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
