<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="colorAccent" format="color" />
    <attr name="colorAccentLight" format="color" />

    <declare-styleable name="Koler" />

    <declare-styleable name="Koler.ListItem">
        <attr name="bigText" format="string" localization="suggested" />
        <attr name="smallText" format="string" localization="suggested" />
        <attr name="header" format="string" />
        <attr name="src" format="reference" />
    </declare-styleable>

    <declare-styleable name="Koler.DialpadKey">
        <attr name="digit" format="string" />
    </declare-styleable>

    <declare-styleable name="Koler.IconChip">
        <attr name="icon" format="reference" />
        <attr name="activatedIcon" format="reference" />
        <attr name="text" format="string" />
        <attr name="activatedText" format="string" />
        <attr name="backgroundColor" format="color" />
        <attr name="backgroundColorActivated" format="color" />
    </declare-styleable>
</resources>