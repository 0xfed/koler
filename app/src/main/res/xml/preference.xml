<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/pref_category_personalization">
        <Preference
            android:key="@string/pref_key_app_color"
            app:title="@string/pref_key_app_color" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_category_call"
        app:iconSpaceReserved="false">

        <ListPreference
            android:defaultValue="@string/pref_default_value_sim_select"
            android:key="@string/pref_key_sim_select"
            android:title="@string/pref_title_sim_select" />
    </PreferenceCategory>

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/pref_category_support">

        <Preference
            android:icon="@drawable/ic_bug_report_black_24dp"
            android:key="@string/pref_key_report_bugs"
            android:title="@string/pref_title_report_bugs" />

        <Preference
            android:icon="@drawable/ic_star_black_24dp"
            android:key="@string/pref_key_rate"
            android:title="@string/pref_title_rate" />

        <Preference
            android:icon="@drawable/ic_stars_black_24dp"
            android:key="@string/pref_key_donate"
            android:title="@string/pref_title_donate" />
    </PreferenceCategory>

    <PreferenceCategory
        app:title="@string/pref_category_contact">
    </PreferenceCategory>
</PreferenceScreen>